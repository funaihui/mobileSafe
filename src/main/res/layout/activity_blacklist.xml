<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_blacklist"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.customview.xiaohui.mobilesafe.activitys.BlacklistActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_blacklist"
        android:elevation="4dp"
        app:title="@string/blacklist"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorBlacklist"
        app:popupTheme="@style/OverflowBlacklistMenuStyle"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        >
    </android.support.v7.widget.Toolbar>
   <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <TextView
            android:visibility="gone"
            android:id="@+id/tv_blacklist_show_message"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:textColor="@android:color/black"
            android:text="@string/noFoundData"
            android:layout_height="wrap_content"/>
        <android.support.v7.widget.RecyclerView
            android:visibility="gone"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:id="@+id/rv_blacklist_show_data"
            android:layout_height="match_parent"/>
        <ProgressBar
            android:visibility="gone"
            android:id="@+id/pb_blacklist_show_progress"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:layout_height="wrap_content"/>
    </FrameLayout>

</LinearLayout>
