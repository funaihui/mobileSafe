<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_setting_center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    tools:context="com.customview.xiaohui.mobilesafe.activitys.SettingCenterActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:elevation="4dp"
        app:title="@string/settingCenter"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorHomeToolbar"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
    </android.support.v7.widget.Toolbar>
    <com.customview.xiaohui.mobilesafe.view.MyCardView
        android:id="@+id/mc_setting_center_auto_update"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:title="自动更新"
        app:content="已开启-未开启"/>
</LinearLayout>
