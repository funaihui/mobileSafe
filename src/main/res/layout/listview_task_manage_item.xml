<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:clickable="true"
    android:background="@drawable/listview_selector"
    android:layout_height="64dp">
    <ImageView
        android:id="@+id/iv_listview_task_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:src="@drawable/app"/>
    <LinearLayout
        android:layout_toRightOf="@+id/iv_listview_task_icon"
        android:layout_width="wrap_content"
        android:layout_centerVertical="true"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:text="名字"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:id="@+id/tv_listview_task_name"
            android:textColor="@android:color/black"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tv_listview_task_size"
            android:text="存贮位置"
            android:layout_marginTop="5dp"
            android:layout_marginLeft="10dp"
            android:textColor="@android:color/holo_blue_dark"
            android:layout_below="@+id/tv_listview_app_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />
    </LinearLayout>

    <CheckBox
        android:id="@+id/tv_listview_app_check"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"/>
</RelativeLayout>
